@model List<GorevAtamaProject.Entity.Personel>

<a asp-action="PersonelEkle" asp-controller="Personel" class="btn btn-sm btn-primary mb-3">Personel Ekle</a>
   
<table class="table table-dark">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>İşlem Ad</th>
        <th>Düzenleme</th>
        <th>Silme</th>
    </tr>
    @foreach (var item in Model)
   {
       <tr>
           <td>@item.PersonelID</td>
           <td>@item.PersonelAd</td>
           <td>@item.PersonelSoyad</td>
           <td>@item.Islem.IslemAd</td>
           <td><a asp-action="PersonelDuzenle"  asp-route-id="@item.PersonelID" asp-controller="Personel" class="btn btn-sm btn-warning">Personel Düzenle</a></td>
           <td><a asp-action="PersonelSil" asp-route-id="@item.PersonelID" asp-controller="Personel" class="btn btn-sm btn-danger">Personel Sil</a></td>
       </tr>
   }
</table>

<a href="/Personel/PersonelAta" class="btn btn-success">Personel Ata</a>