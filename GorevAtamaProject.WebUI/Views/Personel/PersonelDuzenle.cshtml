@model GorevAtamaProject.Entity.Personel

<form asp-controller="Personel" asp-action="PersonelDuzenle" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label>Ad</label>
                <input type="text" class="form-control" asp-for="PersonelAd" />
            </div>

            <div class="form-group mb-2">
                <label>Soyad</label>
                <input type="text" class="form-control" asp-for="PersonelSoyad" />
            </div>
            <button type="submit" class="btn btn-primary">Düzenle</button>
        </div>
    </div>
</form>