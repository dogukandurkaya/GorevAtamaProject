@model List<GorevAtamaProject.Entity.Personel>

<table class="table table-dark table-bordered">
    <tr>
        <th>Ad</th>
        <th>İşlem ID</th>
        <th>Atama Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.PersonelAd  @item.PersonelSoyad</th>
            <th>
                @{
                    var rnd = new Random().Next(1, 8);
                    item.IslemID = rnd;
                }
                @item.IslemID
            </th>
            <td><a asp-action="PersonelDuzenle" asp-route-id="@item.PersonelID" asp-controller="Personel" class="btn btn-sm btn-danger">Atama Değiştir</a></td>

        </tr>
    }
</table>

<a href="/Personel/PersonelList" class="btn btn-success">Personel Listesine Geri Dön</a>

